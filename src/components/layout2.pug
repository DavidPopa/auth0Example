extends index2

include ./super-footer
include ./main-navbar
include ./login-button
include ./logout-button
include ./profileIN
include ./profileOUT

mixin authentication-button(isAuthenticated)
  if isAuthenticated
    +logout-button
  else
    +login-button

mixin profile-button(isAuthenticated)
  if isAuthenticated
    +profileIN
  else
    +profileOUT

block layout-content
  
    header(class = "header") 
        a(href='/')
            img.logo(src='logo.png' alt='BidDriven logo')
            ul.main-nav-list
                        +main-navbar(activeRoute)
                        ul.main-nav-list
                            li
                            +profile-button(isAuthenticated)
                            li
                            +authentication-button(isAuthenticated)
                            li
                            a.main-nav-link.nav-cta(href='/sign-up/ /') Sign Up
    main 
      block content
      +super-footer